LDIR = ../headers
CC = gcc
CFLAGS = -I$(LDIR)

ODIR = obj

SODIR = so

_DEPS = gpioAPI.h stepperMotor.h
DEPS = $(patsubst %,$(LDIR)/%,$(_DEPS))

_OBJ = stepperMotor.o gpioAPI.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))

_SO = stepperMotor.so gpioAPI.so
SO = $(patsubst %, $(SODIR)/%,$(_SO))

$(ODIR)/%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

stepper: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)